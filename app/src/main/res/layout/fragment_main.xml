<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivityFragment"
    android:id="@+id/firstpage"
    android:background="#060600">


    <ImageView
        android:id="@+id/splash_blackhole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:padding="100dp"
        android:src="@drawable/homeblackhole"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Laser Interferometer Gravitational-Wave Observatory"
        android:id="@+id/textView"
        android:textColor="#FFB74D"
        android:textStyle="italic"
        android:textSize="30dp"
        android:height="120dp"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:lineSpacingExtra="5dp"
        android:layout_below="@+id/logo"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/learn_more_Button"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:background="@null"
        android:adjustViewBounds="true"
        android:src="@drawable/learnmore"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:onClick="learn_more_click"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:layout_alignTop="@+id/splash_blackhole"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
